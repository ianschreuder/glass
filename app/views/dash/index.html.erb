<h1>Community Games</h1>

<table class="table table-striped table-bordered">

  <colgroup>
    <col style="width:130px">
    <col style="width:300px">
    <col>
    <col style="width:130px">
  </colgroup>

  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2">Questions</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td>
        <a href="<%= dash_path(game) %>"><%= game.name %></a>
      </td>
      <td><%= game.description %></td>
      <td><%= game.game_problems.count %></td>
      <td>
        <% if game.funded_for_play? %>
          <a href="<%= play_game_path(game) %>" class="btn">
            <i class="icon icon-play"></i>
            Play
          </a>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>